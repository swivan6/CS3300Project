<h1>Projects</h1>


<% if user_signed_in? %>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-sm-4 my-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title"><%= project.name %></h2>
            <p class="card-text"><%= project.description %></p>
            <a class="btn btn-secondary" <%= link_to 'View', project %> </a>
            <a class="btn btn-secondary" <%= link_to 'Edit', edit_project_path(project) %> </a>
            <a class="btn btn-secondary" <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %> </a>
          </div>        
        </div>
      </div>
    <% end %>
  </div>
  <p><a class="btn btn-secondary" <%= link_to 'New Project', new_project_path %> </a></p>
  
<%else %>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-sm-4 my-4">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title"><%= project.name %></h2>
            <p class="card-text"><%= project.description %></p>
            <p><a class="btn btn-secondary" <%= link_to 'View', project %> </a></p>
          </div>        
        </div>
      </div>
    <% end %>
  </div>
<% end %>


  
